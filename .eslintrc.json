{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-mixed-spaces-and-tabs": "off",
		"no-irregular-whitespace" : "off",
        "no-empty": "off",
        "no-console": "error",
        "no-unused-vars": "off",
        "indent": "off",
        "linebreak-style": "off",
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
